<% layout('layout') -%>

<section class="max-w-4xl mx-auto py-6">
  <h1 class="text-3xl font-bold mb-6">Your Folders</h1>
  <a href="/folders/new" class="mb-4 inline-block bg-neonTeal text-black px-4 py-2 rounded hover:bg-moonlightGray">Create New Folder</a>
  <a href="/folders/upload" class="mb-4 inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700 ml-2">Upload File</a>

  <% if (folders.length === 0) { %>
    <p>No folders found.</p>
  <% } else { %>
    <ul class="mb-8">
      <% folders.forEach(folder => { %>
        <li class="mb-2 flex justify-between items-center border-b pb-2">
          <a href="/folders/<%= folder.id %>" class="text-neonTeal hover:underline"><%= folder.name %></a>
          <div>
            <a href="/folders/<%= folder.id %>/edit" class="text-moonlightGray hover:text-neonTeal mr-4">Rename</a>
            <form action="/folders/<%= folder.id %>/delete" method="POST" class="inline" onsubmit="return confirm('Are you sure?');">
              <button type="submit" class="text-red-600 hover:text-red-800">Delete</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <h2 class="text-2xl font-bold mb-4">Your Files</h2>
  <% if (files.length === 0) { %>
    <p>No files uploaded to root.</p>
  <% } else { %>
    <ul>
      <% files.forEach(file => { %>
        <li class="mb-2 flex justify-between items-center border-b pb-2">
          <span class="text-gray-700"><%= file.name %> (<%= Math.round(file.size / 1024) %> KB)</span>
          <a href="<%= file.url %>" class="text-blue-600 hover:underline" download>Download</a>
        </li>
      <% }) %>
    </ul>
  <% } %>
</section>