<% layout('layout') -%>

<section class="max-w-xl mx-auto mt-20 bg-midnightNavy p-10 rounded-2xl shadow-glowCyan border border-neonTeal/30">
  <!-- Title with emoji -->
  <h2 class="text-4xl font-extrabold mb-8 text-neonTeal flex items-center gap-3">
    <span>📁</span> <span>Create New Folder</span>
  </h2>

  <!-- Form -->
  <form action="/folders" method="POST" class="space-y-6">
    <input
      type="text"
      name="name"
      placeholder="Enter folder name..."
      class="w-full px-5 py-3 rounded-xl bg-darkSlate text-white border border-gray-700 focus:border-electricCyan focus:ring-2 focus:ring-electricCyan focus:outline-none transition"
      required
    />
    <button
      type="submit"
      class="w-full bg-neonTeal text-midnightNavy font-semibold py-3 rounded-xl shadow-glow hover:bg-softLavender transition"
    >
        <i class="ti ti-plus"></i> Create Folder
    </button>
  </form>

  <!-- Back link -->
  <div class="mt-8 text-center">
    <a href="/folders" class="text-moonlightGray hover:text-neonTeal font-medium transition duration-200">
      ← Back to folders
    </a>
  </div>
</section>
