<% layout('layout') -%>

<div class="max-w-xl mx-auto mt-10 bg-white shadow-xl rounded-lg p-8">
  <h2 class="text-2xl font-semibold mb-6 text-gray-700">
    Create Subfolder
  </h2>

  <form action="/folders/<%= parentId %>/new-folder" method="POST" class="space-y-6">
    <div>
      <label class="block text-sm font-medium text-gray-700">Folder Name</label>
      <input type="text" name="name" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm px-4 py-2" />
    </div>

    <div>
      <button type="submit" class="w-full py-2 px-4 bg-neonTeal text-black rounded-md hover:bg-moonlightGray">
        Create Subfolder
      </button>
    </div>
  </form>
</div>