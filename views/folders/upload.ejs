<% layout('layout') -%>

<div class="max-w-xl mx-auto mt-10 bg-midnightNavy shadow-glowCyan rounded-2xl p-8">
  <h2 class="text-3xl font-extrabold mb-6 text-neonTeal">
    Upload File <%= folder ? 'to "' + folder.name + '"' : 'to Root' %>
  </h2>

  <form action="<%= folder ? '/folders/' + folder.id + '/upload' : '/folders/upload' %>" method="POST" enctype="multipart/form-data" class="space-y-6">
    <div>
      <label class="block text-sm font-medium text-moonlightGray">Choose file</label>
      <input
        type="file"
        name="file"
        required
        class="mt-1 block w-full rounded-lg border border-gray-700 bg-darkSlate shadow-sm
               file:py-2 file:px-4 file:border-0 file:text-black file:bg-neonTeal hover:file:bg-moonlightGray
               focus:outline-none focus:border-neonTeal transition"
      />
    </div>

    <div>
      <button
        type="submit"
        class="w-full py-3 px-4 bg-neonTeal text-midnightNavy font-bold rounded-lg shadow-glow hover:bg-moonlightGray transition"
      >
        Upload
      </button>
    </div>
  </form>
</div>
