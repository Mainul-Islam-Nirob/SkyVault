<% layout('layout') -%>

<section class="max-w-6xl mx-auto px-4 py-10">
  <div class="flex justify-center gap-4 mb-8">
  <a href="<%= currentFolder ? `/folders/${currentFolder.id}/new-folder` : '/folders/new' %>" 
     class="bg-neonTeal text-black px-6 py-2 rounded-xl shadow-md hover:bg-lightGray transition font-semibold">
    📁 New Folder
  </a>
  <a href="<%= currentFolder ? `/folders/${currentFolder.id}/upload` : '/folders/upload' %>" 
     class="bg-blue-600 text-white px-6 py-2 rounded-xl shadow-md hover:bg-blue-800 transition font-semibold">
    ⬆️ Upload File
  </a>
</div>

<!-- Centered Folder Title -->
<h1 class="text-4xl font-extrabold text-white text-center mb-10 flex  gap-3">
  <span><%= currentFolder ? '🗂️' : '📁' %></span>
  <span><%= currentFolder ? currentFolder.name : 'Your Folders' %></span>
</h1>

  <% const folderList = currentFolder ? subfolders : folders; %>
  <% if (folderList.length === 0) { %>
    <p class="text-mutedText text-lg mb-12">No folders found. Start by creating one.</p>
  <% } else { %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      <% folderList.forEach(folder => { %>
        <div class="bg-darkSlate p-4 rounded-xl shadow hover:shadow-glowCyan transition">
          <a href="/folders/<%= folder.id %>" class="block text-xl font-semibold text-neonTeal mb-2 relative overflow-hidden before:absolute before:bottom-0 before:left-0 before:h-1 before:w-0 before:bg-neonTeal before:transition-all before:duration-300 hover:before:w-full hover:text-white">
            📂 <%= folder.name %>
          </a>
          <p class="text-mutedText text-sm mb-4">Created: <%= new Date(folder.createdAt).toLocaleDateString() %></p>
          <div class="flex gap-3 text-sm">
            <a href="/folders/<%= folder.id %>/edit" class="text-accent hover:text-neonTeal">✏️ Rename</a>
            <form action="/folders/<%= folder.id %>/delete" method="POST" onsubmit="return confirm('Are you sure?');">
              <button type="submit" class="text-red-500 hover:text-red-700">🗑️ Delete</button>
            </form>
            <a href="#" class="text-yellow-400 hover:text-yellow-200">🔗 Share</a>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>

  <h2 class="text-3xl font-bold text-white mb-6">
    📄 <%= currentFolder ? 'Files in "' + currentFolder.name + '"' : 'Files in Root' %>
  </h2>

  <% if (files.length === 0) { %>
    <p class="text-mutedText text-lg">No files uploaded <%= currentFolder ? 'to this folder' : 'to root folder' %> yet.</p>
  <% } else { %>
    <ul class="space-y-4">
      <% files.forEach(file => { %>
        <li class="bg-darkSlate p-4 rounded-xl flex justify-between items-center shadow hover:shadow-glowLavender transition">
          <div>
            <p class="text-lg text-white font-medium"><%= file.name %></p>
            <p class="text-mutedText text-sm"><%= Math.round(file.size / 1024) %> KB — Uploaded on <%= new Date(file.uploadedAt).toLocaleDateString() %></p>
          </div>
          <div class="flex gap-3 text-sm items-center">
            <form action="/files/<%= file.id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this file?');">
              <button type="submit" class="text-red-500 hover:text-red-700 px-3 py-1 rounded bg-transparent hover:bg-red-100 transition">
                🗑️ Delete
              </button>
            </form>
            <a href="<%= file.url %>" class="bg-neonTeal text-black px-3 py-1 rounded hover:bg-lightGray transition" download>
              ⬇️ Download
            </a>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } %>
</section>