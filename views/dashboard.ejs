<% layout('layout') %>

<div class="p-6 max-w-5xl mx-auto">
<h1 class="text-2xl font-bold">Welcome, <%= user.name %>!</h1>


  <form action="/folders/create" method="POST" class="mb-6 flex gap-2">
    <input type="text" name="name" placeholder="New Folder Name" required
           class="px-4 py-2 rounded bg-gray-800 text-white border border-gray-600 focus:outline-none" />
    <button type="submit"
            class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded">
      Create Folder
    </button>
  </form>

  <% if (folders.length === 0) { %>
    <p class="text-gray-400">You donâ€™t have any folders yet. Create one to get started!</p>
  <% } else { %>
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
      <% folders.forEach(folder => { %>
        <div class="bg-gray-900 p-4 rounded shadow hover:shadow-lg transition">
          <h2 class="text-xl font-semibold text-white mb-2"><%= folder.name %></h2>
          <p class="text-sm text-gray-400"><%= folder.files.length %> files</p>
          <a href="/folders/<%= folder.id %>" class="text-indigo-400 hover:underline text-sm mt-2 inline-block">View</a>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
