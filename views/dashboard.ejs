<% layout('layout') -%>

<section class="max-w-6xl mx-auto px-4 py-10">
  <div class="flex justify-center gap-4 mb-8">
  <a href="<%= currentFolder ? `/folders/${currentFolder.id}/new-folder` : '/folders/new' %>" 
     class="bg-neonTeal text-black px-6 py-2 rounded-xl shadow-md hover:bg-lightGray transition font-semibold">
    <i class="ti ti-folder-plus text-black text-xl"></i> New Folder
  </a>
  <a href="<%= currentFolder ? `/folders/${currentFolder.id}/upload` : '/folders/upload' %>" 
     class="bg-blue-600 text-white px-6 py-2 rounded-xl shadow-md hover:bg-blue-800 transition font-semibold">
     <i class="ti ti-cloud-upload text-white text-xl"> </i> Upload File
  </a>
</div>

<!-- Centered Folder Title -->
<h1 class="text-4xl font-extrabold text-white text-center mb-10 flex  gap-3">
   <i class="ti ti-folder text-white text-xxxl"></i>
  <span><%= currentFolder ? currentFolder.name : 'Your Folders' %></span>
</h1>

  <% const folderList = currentFolder ? subfolders : folders; %>
   <% if (breadcrumb && breadcrumb.length > 0) { %>
    <nav class="text-sm text-mutedText mb-6 flex flex-wrap items-center gap-2">
      <a href="/folders" class="hover:text-neonTeal font-semibold">Home</a>
      <% breadcrumb.forEach((folder, index) => { %>
        <span>/</span>
        <% if (index === breadcrumb.length - 1) { %>
          <span class="text-white font-bold"><%= folder.name %></span>
        <% } else { %>
          <a href="/folders/<%= folder.id %>" class="hover:text-neonTeal"><%= folder.name %></a>
        <% } %>
      <% }) %>
    </nav>
  <% } %>
  <% if (folderList.length === 0) { %>
    <p class="text-mutedText text-lg mb-12">No folders found. Start by creating one.</p>
  <% } else { %>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      <% folderList.forEach(folder => { %>
        <div class="bg-darkSlate p-4 rounded-xl shadow hover:shadow-glowCyan transition">
          <a href="/folders/<%= folder.id %>" class="block text-xl font-semibold text-neonTeal mb-2 relative overflow-hidden before:absolute before:bottom-0 before:left-0 before:h-1 before:w-0 before:bg-neonTeal before:transition-all before:duration-300 hover:before:w-full hover:text-white">
               <i class="ti ti-folder text-white text-xxxl"></i> <%= folder.name %>
          </a>
          <p class="text-mutedText text-sm mb-4"> Created: <%= new Date(folder.createdAt).toLocaleDateString() %></p>
          <div class="flex gap-3 text-sm">
            <a href="/folders/<%= folder.id %>/rename" class="text-accent hover:text-neonTeal">   <i class="ti ti-edit"></i> Rename</a>
            <form action="/folders/<%= folder.id %>/delete" method="POST" onsubmit="return confirm('Are you sure?');">
              <button type="submit" class="text-red-500 hover:text-red-700"> <i class="ti ti-trash"></i>  Delete</button>
            </form>
            <!-- <a href="#" class="text-yellow-400 hover:text-yellow-200"> <i class="ti ti-link"></i>  Share</a> -->
             <a href="/folders/<%= folder.id %>/share" class="text-yellow-400 hover:text-yellow-200">
  <i class="ti ti-link"></i> Share
</a>
            
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>

<h2 class="text-3xl font-bold text-white mb-6">
  <i class="ti ti-file text-white text-xxxl"></i>
  <%= currentFolder ? 'Files in "' + currentFolder.name + '"' : 'Files in Root' %>
</h2>

<% if (files.length === 0) { %>
  <p class="text-mutedText text-lg">No files uploaded <%= currentFolder ? 'to this folder' : 'to root folder' %> yet.</p>
<% } else { %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% files.forEach(file => { %>
      <div class="bg-darkSlate p-4 rounded-xl shadow hover:shadow-glowLavender transition flex flex-col justify-between">
        <!-- File Info -->
        <div>
          <p class="text-lg text-white font-medium truncate"><%= file.name %></p>
          <p class="text-mutedText text-sm mb-3">
            <%= Math.round(file.size / 1024) %> KB â€” <%= new Date(file.uploadedAt).toLocaleDateString() %>
          </p>

          <!-- Preview Box -->
          <div class="w-full h-64 bg-gray-900 rounded overflow-hidden shadow relative mb-4">
            <% if (file.url.endsWith('.jpg') || file.url.endsWith('.jpeg') || file.url.endsWith('.png') || file.url.endsWith('.webp')) { %>
              <img src="<%= file.url %>" alt="<%= file.name %>" class="w-full h-full object-cover" />
            <% } else if (file.url.endsWith('.pdf')) { %>
              <iframe src="<%= file.url %>" class="w-full h-full" title="PDF Preview"></iframe>
            <% } else if (file.url.endsWith('.mp4')) { %>
              <video controls class="w-full h-full object-cover">
                <source src="<%= file.url %>" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            <% } else { %>
              <div class="flex items-center justify-center h-full text-center px-4">
                <a href="<%= file.url %>" target="_blank" class="text-blue-400 hover:underline">
                  Open <%= file.name %>
                </a>
              </div>
            <% } %>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex justify-between items-center mt-auto">
          <form action="/files/<%= file.id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this file?');">
            <button type="submit" class="text-red-500 hover:text-red-700 px-3 py-1 text-sm rounded bg-transparent hover:bg-red-100 transition">
              <i class="ti ti-trash"></i> Delete
            </button>
          </form>
          <a href="/files/<%= file.id %>/download" class="bg-neonTeal text-black px-3 py-1 rounded hover:bg-lightGray transition text-sm" download>
            <i class="ti ti-download"></i> Download
          </a>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>
  