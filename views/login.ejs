<% layout('layout') -%>
<section class="max-w-md mx-auto mt-12 bg-white p-8 rounded-lg shadow">
  <h2 class="text-2xl font-bold mb-6">Login to SkyVault</h2>
  <form action="/login" method="POST" class="space-y-4">
    <input type="email" name="email" placeholder="Email" class="w-full px-4 py-2 border rounded" required />
    <input type="password" name="password" placeholder="Password" class="w-full px-4 py-2 border rounded" required />
    <button type="submit" class="w-full bg-primary text-black px-4 py-2 rounded hover:bg-accent">Login</button>
  </form>
</section>