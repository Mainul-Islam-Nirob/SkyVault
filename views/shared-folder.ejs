<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Shared Folder</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-900 text-white min-h-screen p-6">


<div class="max-w-5xl mx-auto mt-10 text-white">
  <h1 class="text-3xl font-bold mb-4">Shared Folder View</h1>

  <p class="text-sm text-gray-400 mb-6">Link expires on: <%= new Date(expiresAt).toLocaleDateString() %></p>

  <!-- Breadcrumbs -->
  <nav class="mb-6 text-sm text-gray-300">
    <ul class="flex flex-wrap items-center gap-2">
      <% breadcrumbs.forEach((crumb, index) => { %>
        <li>
          <% if (index < breadcrumbs.length - 1) { %>
            <a href="/share/<%= sharedId %>?folder=<%= crumb.id %>" class="text-neonTeal hover:underline">
              <%= crumb.name %>
            </a>
            <span class="mx-1">/</span>
          <% } else { %>
            <span class="text-white font-semibold"><%= crumb.name %></span>
          <% } %>
        </li>
      <% }) %>
    </ul>
  </nav>

  <!-- Subfolders -->
  <% if (subfolders.length > 0) { %>
    <h2 class="text-xl font-semibold mb-2">Subfolders</h2>
    <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mb-8">
      <% subfolders.forEach(folder => { %>
        <li class="bg-black-800 p-4 rounded shadow hover:shadow-glowCyan transition">
          <a href="/share/<%= sharedId %>?folder=<%= folder.id %>" class="text-neonTeal text-lg font-semibold hover:underline">
            <i class="ti ti-folder text-white text-2xl mr-2"></i> <%= folder.name %>
          </a>
          <p class="text-sm text-gray-400 mt-1">Updated: <%= new Date(folder.createdAt).toLocaleDateString() %></p>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <!-- Files -->
  <% if (files.length > 0) { %>
    <h2 class="text-xl font-semibold mb-2">Files</h2>
    <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      <% files.forEach(file => { %>
        <li class="bg-black-800 p-4 rounded shadow flex flex-col justify-between">
          <div>
            <p class="text-white font-medium truncate"><%= file.name %></p>
            <p class="text-sm text-gray-400 mb-2"><%= Math.round(file.size / 1024) %> KB</p>

            <% if (file.url.endsWith('.jpg') || file.url.endsWith('.png') || file.url.endsWith('.webp')) { %>
              <img src="<%= file.url %>" alt="<%= file.name %>" class="w-full h-48 object-cover rounded mb-2" />
            <% } else if (file.url.endsWith('.pdf')) { %>
              <iframe src="<%= file.url %>" class="w-full h-48 rounded mb-2" title="PDF Preview"></iframe>
            <% } else if (file.url.endsWith('.mp4')) { %>
              <video controls class="w-full h-48 rounded mb-2">
                <source src="<%= file.url %>" type="video/mp4">
              </video>
            <% } else { %>
              <a href="<%= file.url %>" target="_blank" class="text-blue-400 hover:underline block mb-2">Open File</a>
            <% } %>
          </div>

          <a href="/files/<%= file.id %>/download" class="bg-neonTeal text-black px-3 py-1 rounded hover:bg-lightGray transition text-sm text-center" download>
            <i class="ti ti-download"></i> Download
          </a>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p class="text-gray-400 text-sm">No files in this folder.</p>
  <% } %>
</div>

</body>
</html>