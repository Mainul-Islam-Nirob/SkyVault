<% layout('layout') -%>

<style>
  .input-style {
    width: 100%;
    padding: 0.5rem 1rem;
    border: 1px solid #d1d5db;
    border-radius: 0.375rem;
    outline: none;
    font-size: 1rem;
    color: #121829;
    background-color: #f9fafb;
    transition: box-shadow 0.3s ease, border-color 0.3s ease;
  }
  .input-style::placeholder {
    color: #9ca3af;
  }
  .input-style:focus {
    box-shadow: 0 0 0 3px #00FFC8;
    border-color: transparent;
    background-color: white;
  }
  .btn-primary {
    background-color: #00FFC8;
    color: #121829;
    font-weight: 600;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    width: 100%;
    cursor: pointer;
    transition: background-color 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 0 10px #00FFC8;
    font-size: 1rem;
  }
  .btn-primary:hover {
    color: #121829;
    background-color: #fff;
    box-shadow: 0 0 12px #00FFC8;
  }

</style>

<section class="max-w-md mx-auto mt-12 bg-white p-8 rounded-lg shadow-lg">
  <h2 class="text-2xl font-bold mb-6 text-midnightNavy text-center">Create an account</h2>
  <form action="/register" method="POST" class="space-y-4">
    <input type="text" name="name" placeholder="Your Name" class="input-style" required />
    <input type="email" name="email" placeholder="Email" class="input-style" required />
    <input type="password" name="password" placeholder="Password" class="input-style" required />
    <button type="submit" class="btn-primary">Register</button>
  </form>
  
  <p class="mt-6 text-center text-gray-500">
    Already have an account?
    <a href="/login" class="text-neonTeal font-semibold hover:underline">Login here</a>
  </p>
</section>
