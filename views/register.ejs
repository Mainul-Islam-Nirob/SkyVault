<% layout('layout') -%>
<section class="max-w-md mx-auto mt-12 bg-white p-8 rounded-lg shadow">
  <h2 class="text-2xl font-bold mb-6">Create an account</h2>
  <form action="/register" method="POST" class="space-y-4">
  <input type="text" name="name" placeholder="Your Name" class="input-style" required />
  <input type="email" name="email" placeholder="Email" class="input-style" required />
  <input type="password" name="password" placeholder="Password" class="input-style" required />
  <button type="submit" class="btn-primary w-full">Register</button>
</form>

</section>